{
    "name": "Site Marker",
    "version": "1.0",
    "description": "Mark sites as dev/test/staging to avoid confusion managing multiple websites.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true,
        "chrome_style": true
    },
    "icons": {
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    },
    "manifest_version": 2
}